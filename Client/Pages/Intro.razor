@page "/intro"
@using ForStock.Client.ViewModels
@inject IIntroViewModel _introViewModel

<div>
    <div>
        <div>API key</div>
        <input type="text" @bind-value="_introViewModel.ApiKey" class="form-control" placeholder="API key를 입력하세요.">
    </div>
    <br />
    <div>
        <div>주식코드</div>
        <input type="text" @bind-value="_introViewModel.StockCode" class="form-control" placeholder="주식코드를 입력하세요.">
    </div>
    <br />
    <div>
        <div>개별(OFS)/연결(CFS)</div>
        <div>
            <select class="custom-select">
                <option selected>선택...</option>
                <option value="1">개별(OFS)</option>
                <option value="2">연결(CFS)</option>
            </select>
        </div>
    </div>
    <br />
    <button class="btn btn-primary" @onclick="_introViewModel.UpdateOnclick">Update</button>
</div>
    <br />
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">회사명</th>
      <td>@_introViewModel.CorpName</td>
    </tr>
    <tr>
      <th scope="row">영문명</th>
      <td>@_introViewModel.CorpNameEng</td>
    </tr>
    <tr>
      <th scope="row">대표자명</th>
      <td>@_introViewModel.CeoName</td>
    </tr>
    <tr>
      <th scope="row">법인구분</th>
      <td>@_introViewModel.CorpClass</td>
    </tr>
    <tr>
      <th scope="row">법인등록번호</th>
      <td>@_introViewModel.CorpNumber</td>
    </tr>
    <tr>
      <th scope="row">사업자 등록번호</th>
      <td>@_introViewModel.BusinessNumber</td>
    </tr>
    <tr>
      <th scope="row">주소</th>
      <td>@_introViewModel.Address</td>
    </tr>
    <tr>
      <th scope="row">홈페이지</th>
      <td>@_introViewModel.Homepage</td>
    </tr>
    <tr>
      <th scope="row">IR홈페이지</th>
      <td>@_introViewModel.IrHomepage</td>
    </tr>
    <tr>
      <th scope="row">전화번호</th>
      <td>@_introViewModel.PhoneNumber</td>
    </tr>
    <tr>
      <th scope="row">팩스번호</th>
      <td>@_introViewModel.FaxNumber</td>
    </tr>
    <tr>
      <th scope="row">업종코드</th>
      <td>@_introViewModel.SectorCode</td>
    </tr>
    <tr>
      <th scope="row">설립일</th>
      <td>@_introViewModel.EstablishDate</td>
    </tr>
    <tr>
      <th scope="row">결산월</th>
      <td>@_introViewModel.AccountMonth</td>
    </tr>   
  </tbody>
</table>
