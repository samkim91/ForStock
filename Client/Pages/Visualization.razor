@page "/visualization"
@using ForStock.Shared
@using ForStock.Client.ViewModels
@inject HttpClient Http
@inject IVisualizationViewModel _visualizationViewModel


<Chart Id="revenueQuarters" Type="@Chart.ChartType.Bar" Data="@_visualizationViewModel.dataForRevenue.Amounts.ToArray()" Labels="@_visualizationViewModel.dataForRevenue.YearsAndQuarters.ToArray()"></Chart>

@code{
  protected override async Task OnInitializedAsync(){
    await _visualizationViewModel.Init();

    await base.OnInitializedAsync();
  }

}